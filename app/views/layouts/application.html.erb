<!DOCTYPE html>
<html>
  <head>
    <title>ReservationWork</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>


    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
     <div class="collapse navbar-collapse justify-content-end">
        <ul class="navbar-nav">
           <li class="nav-item">
            <%= link_to 'Planning',plannings_path, class:"nav-link" %>
           </li>
            
            <%if user_signed_in? %>
                
                <li class="nav-item">
                </li>
                <% if current_user.is_admin %>
                   <li class="nav-item">
                    <%= link_to "Espace admin", rails_admin_path, class:"nav-link" %>
                </li>
                <% end %>
                <% if current_user.status == "enseignant" %>
                   <li class="nav-item">
                    <span> <%=current_user.total_time%> heures à effectuer</span>
                  </li>
                  <li class="nav-item">
                    <%= link_to 'Réservation',salles_path,class:"nav-link "%> 
                </li>
                
                <% end %>
                <li class="nav-item">
                    <%= link_to 'Déconnexion',destroy_user_session_path,class:"nav-link text-danger",method: :delete %> 
                </li>
            <% else %>
               
                <li class="nav-item">
                    <%= link_to "S'inscrire", new_user_registration_path, class:"nav-link" %>
                </li>
                                
            <%end%>
          
        </ul>
      </div>
  </header>
  <p class="alert text-info"><%= notice  %></p>
  <p class="alert text-info"><%= alert %></p>

    <%= yield %>
  </body>
</html>
